<% include ../partials/header %>

    <div class="container">
        
        <div class="row">
        
            <h1>Edit <%=campground.name %></h1>
    
            <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST">
        
               <div class="form-group">
                    <label for="campname">Campground Name</label>
                    <input id="campname" class="form-control" type="text" name="campground[name]" value="<%=campground.name%>">
                </div>
                <div class="form-group">
                    <label for="imgurl">Image Url</label>
                    <input id="imgurl" class="form-control" type="text" name="campground[image]" value="<%=campground.image%>">
                </div>
                <div class="form-group">
                    <label for="desc">Description</label>
                    <input id="desc" class="form-control" type="textarea" name="campground[description]" value="<%=campground.description%>">
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-lg btn-block">Submit</button>
                </div>
            </form>
    
            <a href="/campgrounds/<%=campground._id%>/">Back</a>    
            
        </div>    
       

    </div><!-- Container End -->

<% include ../partials/footer %>