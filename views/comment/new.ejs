<% include ../partials/header %>

<script type="text/javascript" src="/js/commentForm.js"></script>
    <div class="page container">
        
        <% include ../partials/flash %>
        
        <div class="pageTitle">
            <h2>Add New Comment to <%=campground.name%></h2>
        </div>

        <form action="/campgrounds/<%=campground._id%>/comments" method="POST">
    
            <div class="form-group">
                <label for="text">Comment</label>
                <textarea id="comment" class="form-control" rows="5" name="comment"></textarea>
                <div name="commentError" id="commentError" class="error hidden"></div>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-tomato btn-lg btn-block">Submit</button>
            </div>
        </form>

    </div><!-- Container End -->

<% include ../partials/footer %>